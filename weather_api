import csv
import os

FORECAST_DAYS = "16"


class WeatherForecast:
    def __init__(self, api_key=""):
        self.api_key = api_key
        self.cache = {}
        self.weather_date = []
        self.date = ""
        self.init_forecast()

    def __getitem__(self, item):
        return

    def __iter__(self):
        # print(self.weather_date)
        for i in self.weather_date:
            yield i[0]

    def items(self):
        for i in self.weather_date:
            # yield i[0], i[1]
            if i[1] in ['Snow', 'Rain']:
                yield i[0], "będzie padać"
            else:
                yield i[0], "nie będzie padać"